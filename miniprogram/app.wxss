/* 动画效果 */
.fade-in {
  animation: fadeIn 0.5s ease-in-out;
}

.slide-up {
  animation: slideUp 0.5s ease-out;
}

.scale-in {
  animation: scaleIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    transform: scale(0.9);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  margin-left: 20rpx;
  color: #7f8c8d;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #7f8c8d;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

/* 错误状态 */
.error-state {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #e74c3c;
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  margin-bottom: 30rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .page-container {
    margin: 15rpx;
    padding: 20rpx;
  }
  
  .card {
    padding: 20rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .subtitle {
    font-size: 26rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  page {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
  }
  
  .page-container {
    background: rgba(44, 62, 80, 0.95);
    color: #ecf0f1;
  }
  
  .card {
    background: #34495e;
    color: #ecf0f1;
  }
  
  .title {
    color: #ecf0f1;
  }
  
  .subtitle {
    color: #bdc3c7;
  }
  
  .input {
    background: #34495e;
    border-color: #4a6741;
    color: #ecf0f1;
  }
  
  .list {
    background: #34495e;
  }
  
  .list-item {
    border-bottom-color: #4a6741;
  }
}
