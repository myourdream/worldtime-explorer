/* components/city-card/city-card.wxss */
.city-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.city-card:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
}

.city-card.favorite {
  border: 2rpx solid #e74c3c;
  background: linear-gradient(135deg, #fff5f5 0%, #ffffff 100%);
}

.city-card.selected {
  border: 2rpx solid #667eea;
  background: linear-gradient(135deg, #f0f4ff 0%, #ffffff 100%);
}

/* 城市信息头部 */
.city-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.city-info {
  flex: 1;
}

.city-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8rpx;
}

.city-country {
  font-size: 24rpx;
  color: #7f8c8d;
}

.city-actions {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.favorite-btn.active {
  background: #ffe6e6;
  transform: scale(1.1);
}

.favorite-btn .icon-heart {
  font-size: 28rpx;
}

.remove-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #e74c3c;
  color: #ffffff;
  transition: all 0.3s ease;
}

.remove-btn:hover {
  background: #c0392b;
  transform: scale(1.1);
}

.remove-btn .icon-close {
  font-size: 24rpx;
  font-weight: bold;
}

/* 时间显示区域 */
.time-section {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
  color: #ffffff;
}

/* 时区信息 */
.timezone-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
  padding: 15rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
}

.timezone-name {
  font-size: 22rpx;
  color: #2c3e50;
  font-family: monospace;
}

.timezone-offset {
  font-size: 20rpx;
  color: #7f8c8d;
  font-weight: 500;
}

/* 日期信息 */
.date-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #ecf0f1;
}

.date-display {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

.day-of-week {
  font-size: 22rpx;
  color: #7f8c8d;
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #ecf0f1;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 15rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 错误状态 */
.error-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  padding: 20rpx;
}

.error-icon {
  font-size: 60rpx;
  margin-bottom: 15rpx;
}

.error-text {
  font-size: 24rpx;
  color: #e74c3c;
  text-align: center;
  margin-bottom: 20rpx;
}

.retry-btn {
  background: #667eea;
  color: #ffffff;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 22rpx;
}

/* 动画效果 */
.city-card {
  animation: slideInUp 0.5s ease-out;
}

@keyframes slideInUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.favorite-btn.active .icon-heart {
  animation: heartBeat 0.6s ease-in-out;
}

@keyframes heartBeat {
  0% { transform: scale(1); }
  50% { transform: scale(1.3); }
  100% { transform: scale(1); }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .city-card {
    padding: 20rpx;
    margin-bottom: 15rpx;
  }
  
  .city-name {
    font-size: 28rpx;
  }
  
  .city-country {
    font-size: 22rpx;
  }
  
  .timezone-info {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
  
  .date-section {
    flex-direction: column;
    align-items: flex-start;
    gap: 8rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .city-card {
    background: #34495e;
    color: #ecf0f1;
  }
  
  .city-card.favorite {
    background: linear-gradient(135deg, #4a2c2c 0%, #34495e 100%);
  }
  
  .city-card.selected {
    background: linear-gradient(135deg, #2c3c4a 0%, #34495e 100%);
  }
  
  .city-name {
    color: #ecf0f1;
  }
  
  .city-country {
    color: #bdc3c7;
  }
  
  .timezone-info {
    background: #2c3e50;
  }
  
  .timezone-name {
    color: #ecf0f1;
  }
  
  .timezone-offset {
    color: #bdc3c7;
  }
  
  .date-display {
    color: #ecf0f1;
  }
  
  .day-of-week {
    color: #bdc3c7;
  }
  
  .loading-overlay {
    background: rgba(52, 73, 94, 0.9);
  }
  
  .error-overlay {
    background: rgba(52, 73, 94, 0.95);
  }
}
