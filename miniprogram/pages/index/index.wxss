/* pages/index/index.wxss */
.container {
  padding: 20rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.header-content {
  flex: 1;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.page-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 400;
}

.header-actions {
  display: flex;
  align-items: center;
}

.refresh-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.refresh-btn:hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(1.1);
}

.refresh-btn .icon-refresh {
  font-size: 32rpx;
}

/* 当前时间区域 */
.current-time-section {
  margin-bottom: 40rpx;
}

.current-time-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.time-label {
  font-size: 28rpx;
  color: #2c3e50;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 500;
}

/* 城市列表区域 */
.cities-section {
  margin-bottom: 40rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.city-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

/* 城市列表 */
.cities-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #ecf0f1;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #7f8c8d;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
}

.add-city-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.error-icon {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #e74c3c;
  text-align: center;
  margin-bottom: 30rpx;
}

.retry-btn {
  background: #e74c3c;
  color: #ffffff;
  border: none;
  border-radius: 25rpx;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.action-item:hover {
  background: rgba(102, 126, 234, 0.1);
  transform: translateY(-4rpx);
}

.action-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 24rpx;
  color: #2c3e50;
  font-weight: 500;
}

/* 底部提示 */
.footer-tips {
  text-align: center;
  padding: 20rpx;
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  background: rgba(255, 255, 255, 0.1);
  padding: 15rpx 25rpx;
  border-radius: 20rpx;
  display: inline-block;
}

/* 动画效果 */
.container {
  animation: fadeIn 0.8s ease-out;
}

.page-header {
  animation: slideInDown 0.6s ease-out;
}

.current-time-section {
  animation: slideInUp 0.6s ease-out 0.2s both;
}

.cities-section {
  animation: slideInUp 0.6s ease-out 0.4s both;
}

.quick-actions {
  animation: slideInUp 0.6s ease-out 0.6s both;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideInDown {
  from {
    transform: translateY(-50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideInUp {
  from {
    transform: translateY(50rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .page-subtitle {
    font-size: 24rpx;
  }
  
  .current-time-card {
    padding: 30rpx;
  }
  
  .quick-actions {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .action-item {
    flex-direction: row;
    justify-content: flex-start;
    padding: 25rpx;
  }
  
  .action-icon {
    margin-right: 20rpx;
    margin-bottom: 0;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .current-time-card,
  .loading-state,
  .empty-state,
  .error-state,
  .quick-actions {
    background: rgba(44, 62, 80, 0.95);
    color: #ecf0f1;
  }
  
  .time-label {
    color: #ecf0f1;
  }
  
  .empty-text {
    color: #bdc3c7;
  }
  
  .action-text {
    color: #ecf0f1;
  }
  
  .tip-text {
    background: rgba(44, 62, 80, 0.3);
    color: rgba(236, 240, 241, 0.8);
  }
}
